{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Data-Wise/flow-cli/teach-config.schema.json",
  "title": "Teaching Configuration Schema",
  "description": "Shared schema for flow-cli and Scholar teaching integration",
  "type": "object",
  "required": ["course"],
  "properties": {
    "course": {
      "$ref": "#/definitions/course",
      "description": "Course information (flow-cli owns, Scholar reads)"
    },
    "semester_info": {
      "$ref": "#/definitions/semester_info",
      "description": "Semester schedule (flow-cli owns)"
    },
    "branches": {
      "$ref": "#/definitions/branches",
      "description": "Git branch configuration (flow-cli owns)"
    },
    "deployment": {
      "$ref": "#/definitions/deployment",
      "description": "Deployment settings (flow-cli owns)"
    },
    "automation": {
      "$ref": "#/definitions/automation",
      "description": "Automation scripts (flow-cli owns)"
    },
    "scholar": {
      "$ref": "#/definitions/scholar",
      "description": "Scholar integration settings (Scholar owns)"
    },
    "examark": {
      "$ref": "#/definitions/examark",
      "description": "Examark rendering settings (optional)"
    },
    "concepts": {
      "$ref": "#/definitions/concepts",
      "description": "Concept analysis settings (flow-cli owns, v5.16.0+)"
    },
    "shortcuts": {
      "type": "object",
      "description": "Custom shell shortcuts",
      "additionalProperties": { "type": "string" }
    },
    "git": {
      "$ref": "#/definitions/git",
      "description": "Git workflow configuration (flow-cli owns, v5.11.0+)"
    },
    "workflow": {
      "$ref": "#/definitions/workflow",
      "description": "Workflow automation settings (flow-cli owns, v5.11.0+)"
    }
  },
  "definitions": {
    "course": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Short course name (e.g., 'STAT 440')"
        },
        "full_name": {
          "type": "string",
          "description": "Full course title"
        },
        "semester": {
          "type": "string",
          "enum": ["Spring", "Summer", "Fall", "Winter"],
          "description": "Semester name"
        },
        "year": {
          "type": "integer",
          "minimum": 2020,
          "maximum": 2100,
          "description": "Academic year"
        },
        "instructor": {
          "type": "string",
          "description": "Instructor name"
        }
      }
    },
    "semester_info": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Semester start date (YYYY-MM-DD)"
        },
        "end_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Semester end date (YYYY-MM-DD)"
        },
        "breaks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
            }
          },
          "description": "Break periods (spring break, etc.)"
        },
        "weeks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["number", "start_date"],
            "properties": {
              "number": {
                "type": "integer",
                "minimum": 1,
                "maximum": 52,
                "description": "Week number (1-52)"
              },
              "start_date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Week start date (YYYY-MM-DD)"
              },
              "topic": {
                "type": "string",
                "description": "Week topic or title"
              }
            }
          },
          "description": "Weekly schedule with topics"
        },
        "holidays": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "date"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Holiday name"
              },
              "date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Holiday date (YYYY-MM-DD)"
              },
              "type": {
                "type": "string",
                "enum": ["break", "holiday", "no_class"],
                "description": "Holiday type"
              }
            }
          },
          "description": "Holidays and no-class days"
        },
        "deadlines": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "oneOf": [
              {
                "required": ["due_date"],
                "properties": {
                  "due_date": {
                    "type": "string",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                    "description": "Absolute due date (YYYY-MM-DD)"
                  }
                }
              },
              {
                "required": ["week", "offset_days"],
                "properties": {
                  "week": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 52,
                    "description": "Week number (1-52)"
                  },
                  "offset_days": {
                    "type": "integer",
                    "description": "Days offset from week start (can be negative)"
                  }
                }
              }
            ]
          },
          "description": "Assignment deadlines (absolute or relative)"
        },
        "exams": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "date"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Exam name"
              },
              "date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Exam date (YYYY-MM-DD)"
              },
              "time": {
                "type": "string",
                "description": "Exam time"
              },
              "location": {
                "type": "string",
                "description": "Exam location"
              }
            }
          },
          "description": "Exam schedule"
        }
      }
    },
    "branches": {
      "type": "object",
      "properties": {
        "draft": {
          "type": "string",
          "default": "draft",
          "description": "Development branch name"
        },
        "production": {
          "type": "string",
          "default": "production",
          "description": "Production branch name"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "web": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["github-pages", "netlify", "vercel", "custom"],
              "description": "Deployment platform"
            },
            "branch": {
              "type": "string",
              "description": "Branch to deploy from"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Live site URL"
            }
          }
        }
      }
    },
    "automation": {
      "type": "object",
      "properties": {
        "quick_deploy": {
          "type": "string",
          "description": "Path to quick deploy script"
        }
      }
    },
    "scholar": {
      "type": "object",
      "description": "Scholar plugin configuration (Scholar owns this section)",
      "properties": {
        "course_info": {
          "type": "object",
          "properties": {
            "level": {
              "type": "string",
              "enum": ["undergraduate", "graduate", "both"],
              "description": "Course level"
            },
            "field": {
              "type": "string",
              "description": "Academic field (statistics, mathematics, etc.)"
            },
            "difficulty": {
              "type": "string",
              "enum": ["beginner", "intermediate", "advanced"],
              "description": "Course difficulty"
            },
            "credits": {
              "type": "integer",
              "minimum": 1,
              "maximum": 6,
              "description": "Credit hours"
            }
          }
        },
        "style": {
          "type": "object",
          "properties": {
            "tone": {
              "type": "string",
              "enum": ["formal", "conversational"],
              "default": "formal",
              "description": "Content tone"
            },
            "notation": {
              "type": "string",
              "enum": ["statistical", "mathematical", "standard"],
              "default": "statistical",
              "description": "Mathematical notation style"
            },
            "examples": {
              "type": "boolean",
              "default": true,
              "description": "Include worked examples"
            }
          }
        },
        "topics": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Course topics for content scope"
        },
        "grading": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "description": "Grade distribution (must sum to 100)"
        }
      }
    },
    "examark": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Examark integration"
        },
        "exam_dir": {
          "type": "string",
          "default": "exams",
          "description": "Directory for exam files"
        },
        "question_bank": {
          "type": "string",
          "description": "Path to question bank"
        },
        "default_duration": {
          "type": "integer",
          "minimum": 15,
          "maximum": 300,
          "default": 120,
          "description": "Default exam duration in minutes"
        },
        "default_points": {
          "type": "integer",
          "minimum": 10,
          "maximum": 500,
          "default": 100,
          "description": "Default total points"
        }
      }
    },
    "git": {
      "type": "object",
      "description": "Git workflow configuration (v5.11.0+)",
      "properties": {
        "draft_branch": {
          "type": "string",
          "default": "draft",
          "pattern": "^[a-zA-Z0-9_/-]+$",
          "description": "Branch for content development"
        },
        "production_branch": {
          "type": "string",
          "default": "main",
          "pattern": "^[a-zA-Z0-9_/-]+$",
          "description": "Branch for site deployment (GitHub Pages)"
        },
        "auto_pr": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create PR on teach deploy"
        },
        "require_clean": {
          "type": "boolean",
          "default": true,
          "description": "Abort operations if uncommitted changes exist"
        }
      }
    },
    "workflow": {
      "type": "object",
      "description": "Workflow automation settings (v5.11.0+)",
      "properties": {
        "teaching_mode": {
          "type": "boolean",
          "default": false,
          "description": "Enable streamlined teaching workflow (auto-commit after generation)"
        },
        "auto_commit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically commit after content generation (teaching mode only)"
        },
        "auto_push": {
          "type": "boolean",
          "default": false,
          "description": "Automatically push commits to remote (not recommended)"
        }
      }
    },
    "concepts": {
      "type": "object",
      "description": "Concept analysis settings (v5.16.0+)",
      "properties": {
        "auto_extract": {
          "type": "boolean",
          "default": true,
          "description": "Automatically extract concepts from frontmatter"
        },
        "analysis": {
          "type": "object",
          "properties": {
            "strict_ordering": {
              "type": "boolean",
              "default": true,
              "description": "Enforce week-based prerequisite ordering"
            },
            "warn_orphans": {
              "type": "boolean",
              "default": false,
              "description": "Warn about concepts with no prerequisites defined"
            }
          }
        },
        "weeks": {
          "type": "object",
          "description": "Week-level concept definitions (overrides frontmatter)",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "introduces": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Concepts introduced this week"
              },
              "requires": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Prerequisite concepts"
              }
            }
          }
        },
        "global_prerequisites": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "concept": {
                "type": "string",
                "description": "External concept name"
              },
              "required_for": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Concepts that require this external prerequisite"
              },
              "introduced": {
                "type": "string",
                "const": "external",
                "description": "Mark as external (not taught in this course)"
              }
            }
          },
          "description": "External prerequisites assumed known"
        }
      }
    }
  }
}
