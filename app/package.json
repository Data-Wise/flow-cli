{
  "name": "zsh-workflow-manager",
  "productName": "ZSH Workflow Manager",
  "version": "0.1.0",
  "description": "Desktop app for managing ADHD-optimized ZSH workflows",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "zsh",
    "workflow",
    "adhd",
    "productivity",
    "shell"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.zsh.workflow-manager",
    "productName": "ZSH Workflow Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    }
  }
}
