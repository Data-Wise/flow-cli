{
  "name": "@flowcli/core",
  "version": "0.1.0",
  "description": "Node.js integration layer for ZSH workflow commands",
  "type": "module",
  "main": "api/index.js",
  "bin": {
    "flow": "./bin/flow.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/integration",
    "test:all": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:legacy": "node test/test-status.js",
    "test:status": "node test/test-status.js",
    "test:detector": "node test/test-project-detector.js"
  },
  "keywords": [
    "zsh",
    "workflow",
    "cli",
    "integration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
